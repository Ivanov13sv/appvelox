{
	"extends": ["react-app", "react-app/jest"],
	"rules": {
		"no-unused-vars": "off",
		"@typescript-eslint/no-unused-vars": ["off"],
		"no-console": "warn",
		"quotes": ["warn", "single"],
		"jsx-quotes": ["warn", "prefer-double"],
		"prefer-const": "warn",
		"max-len": ["warn", { "code": 120 }],
		"react-hooks/exhaustive-deps": "off",
		"semi": ["warn", "always"],
		"import/order": [
			"warn",
			{
				"groups": [
					"builtin",
					"external",
					"internal",
					"parent",
					"sibling",
					"index",
					"object",
					"type"
				]
			}
		]
	}
}
